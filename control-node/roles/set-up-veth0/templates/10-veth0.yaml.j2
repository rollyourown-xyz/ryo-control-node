# This file describes the network interfaces available on your system
# For more information, see netplan(5).
network:
    version: 2
    renderer: networkd
    ethernets:
        veth0:
            dhcp4: no
            dhcp6: no
            accept-ra: yes
            addresses:
            - {{ veth0_network_part }}.1/32
            - {{ veth0_network_ipv6_prefix }}::1/128
            match:
                macaddress: {{ veth0_macaddress }}
